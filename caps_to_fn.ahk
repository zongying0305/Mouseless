/* turn caps to fn */

CapsLock & i::
{
    Send "{Up}"
}

CapsLock & k::
{
    Send "{Down}"
}

CapsLock & j::
{
    Send "{Left}"
}

CapsLock & l::
{
    Send "{Right}"
}

CapsLock & p::
{
    Send "{PgUp}"
}

CapsLock & `;::
{
    Send "{PgDn}"
}

CapsLock & [::
{
    Send "{Home}"
}

CapsLock & '::
{
    Send "{End}"
}